---
import '../styles/tailwind.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { languageList } from '../i18n/ui';
import { useTranslations } from '../i18n/utils';

const currentLang = Astro.currentLocale || 'es';
const translateLabels = useTranslations(currentLang as keyof typeof languageList)
---

<!DOCTYPE html>
<html lang={currentLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Título SEO -->
    <title>CodeXtremeOS - Windows Gaming</title>

    <!-- Meta Tags SEO -->
    <meta name="description" content="Descarga CodeXtremeOS, la mejor versión de Windows optimizada para gaming y máximo rendimiento. Eleva tu experiencia de juego a otro nivel.">
    <meta name="robots" content="index, follow">
    <meta name="keywords" content="Windows optimizado, gaming, rendimiento, CodeXtremeOS, sistema operativo para gamers, PC gaming, optimización Windows">
    
    <!-- Open Graph y Twitter -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="CodeXtremeOS">
    <meta property="og:description" content="La mejor versión de Windows modificada para gaming y máximo rendimiento. Descarga CodeXtremeOS ahora y lleva tu experiencia de juego al siguiente nivel.">
    <meta property="og:image" content="https://codextreme-web.vercel.app/imagen-previa.png">
    <meta property="og:url" content="https://codextreme-web.vercel.app">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="CodeXtremeOS">
    <meta name="twitter:description" content="La mejor versión de Windows modificada para gaming y máximo rendimiento. Descarga CodeXtremeOS ahora y lleva tu experiencia de juego al siguiente nivel.">
    <meta name="twitter:image" content="https://codextreme-web.vercel.app/imagen-twitter.png">
    <meta name="google-site-verification" content="X4pVBsZ9Qujczrzm_M8EeRE0Kvom53DCD6zt2ffWXsI" />
    
    <!-- Favicon y iconos -->
    <link rel="icon" href="/favicon.webp" sizes="32x32">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <meta name="theme-color" content="#6B5B95">

    <!-- Schema Markup JSON-LD -->
    <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "url": "https://codextreme-web.vercel.app",
      "name": "CodeXtremeOS",
      "description": "La mejor versión de Windows modificada para gaming y máximo rendimiento.",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://codextreme-web.vercel.app/buscar?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    </script>
  </head>
  
  <body class="bg-[#F4F4F4] dark:bg-[#1A1A1A] text-gray-900 dark:text-gray-100 pt-20">
    <Header />
    <main class="min-h-screen">
      
      <!-- Contenido -->
      <slot />
    </main>
    <Footer />
  </body>
</html>